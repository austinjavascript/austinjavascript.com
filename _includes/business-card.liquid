<div class="card">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        {%- if size == 'small' -%}
        <figure class="image is-64x64 has-background-grey-lighter">
        {%- else -%}
        <figure class="image is-96x96 has-background-grey-lighter">
        {%- endif -%}
          {%- avatar person.avatar, person.name -%}
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-size-5">{{ person.name }}</p>
        <div class="subtitle is-6 has-text-weight-semibold is-marginless-bottom">{{ person.title | markdown }}</div>
        <div>
          {%- include 'social-links.liquid' -%}
        </div>
      </div>
    </div>
  </div>
  {%- if person.bio -%}
  <div class="card-footer">
    <div class="card-footer-item">
      <div class="content">
        {{ person.bio | markdown }}
      </div>
    </div>
  </div>
  {%- endif -%}
</div>
